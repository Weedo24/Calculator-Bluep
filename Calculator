    <script>
        // Price calculation variables
        let sessionHourlyRate = 150;
        let albumUnitPrice = 100;
        
        // Update session price display
        document.getElementById('sessionRange').addEventListener('input', function() {
            sessionHourlyRate = parseInt(this.value);
            document.getElementById('sessionPrice').textContent = `R$ ${sessionHourlyRate}`;
            calculateTotal();
        });
        
        // Update album price display
        document.getElementById('albumRange').addEventListener('input', function() {
            albumUnitPrice = parseInt(this.value);
            document.getElementById('albumPrice').textContent = `R$ ${albumUnitPrice}`;
            calculateTotal();
        });
        
        // Add event listeners for quantity inputs
        document.getElementById('sessionHours').addEventListener('input', calculateTotal);
        document.getElementById('editingCount').addEventListener('input', calculateTotal);
        document.getElementById('albumCount').addEventListener('input', calculateTotal);
        
        function calculateTotal() {
            const sessionHours = parseInt(document.getElementById('sessionHours').value) || 0;
            const editingCount = parseInt(document.getElementById('editingCount').value) || 0;
            const albumCount = parseInt(document.getElementById('albumCount').value) || 0;
            
            const sessionTotal = sessionHourlyRate * sessionHours;
            const editingTotal = editingCount * 50;
            const albumTotal = albumUnitPrice * albumCount;
            const total = sessionTotal + editingTotal + albumTotal;
            
            // Update summary
            const sessionSummary = document.getElementById('sessionSummary');
            const editingSummary = document.getElementById('editingSummary');
            const albumSummary = document.getElementById('albumSummary');
            
            if (sessionHours > 0) {
                sessionSummary.style.display = 'flex';
                sessionSummary.querySelector('span:first-child').textContent = `Sess√£o Fotogr√°fica (${sessionHours}h)`;
                sessionSummary.querySelector('span:last-child').textContent = `R$ ${sessionTotal.toFixed(2).replace('.', ',')}`;
            } else {
                sessionSummary.style.display = 'none';
            }
            
            if (editingCount > 0) {
                editingSummary.style.display = 'flex';
                editingSummary.querySelector('span:first-child').textContent = `Edi√ß√£o de Fotos (${editingCount} imagens)`;
                editingSummary.querySelector('span:last-child').textContent = `R$ ${editingTotal.toFixed(2).replace('.', ',')}`;
            } else {
                editingSummary.style.display = 'none';
            }
            
            if (albumCount > 0) {
                albumSummary.style.display = 'flex';
                albumSummary.querySelector('span:first-child').textContent = `√Ålbuns (${albumCount} unidades)`;
                albumSummary.querySelector('span:last-child').textContent = `R$ ${albumTotal.toFixed(2).replace('.', ',')}`;
            } else {
                albumSummary.style.display = 'none';
            }
            
            document.getElementById('totalPrice').textContent = `R$ ${total.toFixed(2).replace('.', ',')}`;
        }
        
        function generateQuote() {
            const sessionHours = parseInt(document.getElementById('sessionHours').value) || 0;
            const editingCount = parseInt(document.getElementById('editingCount').value) || 0;
            const albumCount = parseInt(document.getElementById('albumCount').value) || 0;
            
            const sessionTotal = sessionHourlyRate * sessionHours;
            const editingTotal = editingCount * 50;
            const albumTotal = albumUnitPrice * albumCount;
            const total = sessionTotal + editingTotal + albumTotal;
            
            let quoteHTML = `
                <div class="text-sm text-white/70 mb-4">Data: ${new Date().toLocaleDateString('pt-BR')}</div>
            `;
            
            if (sessionHours > 0) {
                quoteHTML += `
                    <div class="flex justify-between py-2">
                        <span>Sess√£o Fotogr√°fica (${sessionHours}h)</span>
                        <span>R$ ${sessionTotal.toFixed(2).replace('.', ',')}</span>
                    </div>
                `;
            }
            
            if (editingCount > 0) {
                quoteHTML += `
                    <div class="flex justify-between py-2">
                        <span>Edi√ß√£o de Fotos (${editingCount} imagens)</span>
                        <span>R$ ${editingTotal.toFixed(2).replace('.', ',')}</span>
                    </div>
                `;
            }
            
            if (albumCount > 0) {
                quoteHTML += `
                    <div class="flex justify-between py-2">
                        <span>√Ålbuns (${albumCount} unidades)</span>
                        <span>R$ ${albumTotal.toFixed(2).replace('.', ',')}</span>
                    </div>
                `;
            }
            
            quoteHTML += `
                <div class="border-t border-white/30 pt-4 mt-4">
                    <div class="flex justify-between text-lg font-bold">
                        <span>Total</span>
                        <span>R$ ${total.toFixed(2).replace('.', ',')}</span>
                    </div>
                </div>
                <div class="text-xs text-white/60 mt-4">
                    Or√ßamento v√°lido por 30 dias. Entre em contato para mais informa√ß√µes.
                </div>
            `;
            
            document.getElementById('quoteContent').innerHTML = quoteHTML;
            document.getElementById('quoteModal').classList.remove('hidden');
            document.getElementById('quoteModal').classList.add('flex');
        }
        
        function closeQuote() {
            document.getElementById('quoteModal').classList.add('hidden');
            document.getElementById('quoteModal').classList.remove('flex');
        }
        
        function shareQuote() {
            const sessionHours = parseInt(document.getElementById('sessionHours').value) || 0;
            const editingCount = parseInt(document.getElementById('editingCount').value) || 0;
            const albumCount = parseInt(document.getElementById('albumCount').value) || 0;
            const total = (sessionHourlyRate * sessionHours) + (editingCount * 50) + (albumUnitPrice * albumCount);
            
            let shareText = `üéØ Or√ßamento Est√∫dio Xeez\n\n`;
            
            if (sessionHours > 0) shareText += `üì∏ Sess√£o: ${sessionHours}h - R$ ${(sessionHourlyRate * sessionHours).toFixed(2).replace('.', ',')}\n`;
            if (editingCount > 0) shareText += `‚ú® Edi√ß√£o: ${editingCount} fotos - R$ ${(editingCount * 50).toFixed(2).replace('.', ',')}\n`;
            if (albumCount > 0) shareText += `üìö √Ålbuns: ${albumCount} unidades - R$ ${(albumUnitPrice * albumCount).toFixed(2).replace('.', ',')}\n`;
            
            shareText += `\nüí∞ Total: R$ ${total.toFixed(2).replace('.', ',')}`;
            
            if (navigator.share) {
                navigator.share({
                    title: 'Or√ßamento Est√∫dio Xeez',
                    text: shareText
                });
            } else {
                navigator.clipboard.writeText(shareText).then(() => {
                    alert('Or√ßamento copiado para a √°rea de transfer√™ncia!');
                });
            }
        }
        
        function resetCalculator() {
            document.getElementById('sessionRange').value = 150;
            document.getElementById('albumRange').value = 100;
            document.getElementById('sessionHours').value = 1;
            document.getElementById('editingCount').value = 0;
            document.getElementById('albumCount').value = 0;
            
            sessionHourlyRate = 150;
            albumUnitPrice = 100;
            
            document.getElementById('sessionPrice').textContent = 'R$ 150';
            document.getElementById('albumPrice').textContent = 'R$ 100';
            
            calculateTotal();
        }
        
        // Initialize calculator
        calculateTotal();
    </script>
